<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:padding="5dp">

  <EditText
      android:id="@+id/name"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      android:hint="enter name"
      android:textColor="#000"></EditText>

  <EditText
      android:id="@+id/age"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      android:hint="enter age"
      android:textColor="#000"></EditText>

  <EditText
      android:id="@+id/job"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      android:hint="enter job"
      android:textColor="#000"></EditText>

  <EditText
      android:id="@+id/village"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      android:hint="enter village"
      android:textColor="#000"></EditText>

  <EditText
      android:id="@+id/post"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      android:hint="enter post"
      android:textColor="#000"></EditText>

  <EditText
      android:id="@+id/game"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      android:hint="enter favorite game"
      android:textColor="#000"></EditText>

  <EditText
      android:id="@+id/email"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      android:hint="enter email"
      android:textColor="#000"></EditText>

  <EditText
      android:id="@+id/pass"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      android:hint="enter password"
      android:textColor="#000"></EditText>

  <EditText
      android:id="@+id/pass_1"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      android:hint="enter C.password"
      android:textColor="#000"></EditText>

  <Button
      android:id="@+id/submit"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="10dp"
      android:layout_marginBottom="20dp"
      android:background="#3A736E"
      android:hint="enter name"
      android:text="Send"
      android:textColor="#fff"></Button>
 </LinearLayout>
</ScrollView>